# Application Configuration
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=n8n_ai
DATABASE_USER=n8n_ai
DATABASE_PASSWORD=n8n_ai_dev
DATABASE_URI=postgresql://n8n_ai:n8n_ai_dev@localhost:5432/n8n_ai

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URI=redis://localhost:6379

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=n8n_ai
RABBITMQ_PASSWORD=n8n_ai_dev
RABBITMQ_VHOST=/n8n-ai
RABBITMQ_URI=amqp://n8n_ai:n8n_ai_dev@localhost:5672/n8n-ai
RABBITMQ_QUEUES_EXECUTIONS=executions
RABBITMQ_QUEUES_NODE_RUNNER=node_runner

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true

# External Services
ENGINE_SERVICE_URL=http://localhost:8080
NODE_RUNNER_SERVICE_URL=http://localhost:3002

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=n8n-work-storage

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@n8n-work.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# Scheduling Configuration
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=60000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Database Connection Pool Configuration
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=30000

# Redis Connection Pool Configuration
REDIS_POOL_MIN=1
REDIS_POOL_MAX=10

# RabbitMQ Connection Configuration
RABBITMQ_PREFETCH_COUNT=1
RABBITMQ_RECONNECT_TIME_IN_MS=5000
RABBITMQ_HEARTBEAT_INTERVAL_IN_SECONDS=60

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Metrics Configuration
METRICS_PORT=9090
METRICS_PATH=/metrics

# Tracing Configuration
TRACING_SERVICE_NAME=n8n-work-orchestrator
TRACING_SERVICE_VERSION=1.0.0
TRACING_ENDPOINT=http://localhost:4317

# Feature Flags
FEATURE_AI_AGENTS=false
FEATURE_PLUGIN_MARKETPLACE=false
FEATURE_ADVANCED_MONITORING=false
FEATURE_MULTI_TENANCY=true

# Limits Configuration
MAX_WORKFLOWS_PER_TENANT=1000
MAX_EXECUTIONS_PER_WORKFLOW=10000
MAX_NODES_PER_WORKFLOW=100
MAX_WEBHOOKS_PER_WORKFLOW=10

# Timeout Configuration
WORKFLOW_EXECUTION_TIMEOUT=300000
NODE_EXECUTION_TIMEOUT=30000
WEBHOOK_TIMEOUT=30000

# Retention Configuration
EXECUTION_LOG_RETENTION_DAYS=30
AUDIT_LOG_RETENTION_DAYS=90
TEMP_FILE_RETENTION_HOURS=24